{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "noEmit": false,
    "target": "es2017",
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["lib", "bin"]
}
